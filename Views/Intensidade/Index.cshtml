@model IEnumerable<DiarioEmocional.Models.Intensidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Intensidade</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-light" asp-route-id="@item.ID">Editar</a> |
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
