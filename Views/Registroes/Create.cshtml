@model DiarioEmocional.Models.Registro

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Emoção</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmocaoID" class="control-label"></label>
                <select asp-for="EmocaoID" class="form-control" asp-items="ViewBag.EmocaoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Situacao" class="control-label"></label>
                <input asp-for="Situacao" class="form-control"  placeholder="Digite o que encadeou essa emoção"/>
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntensidadeID" class="control-label"></label>
                <select asp-for="IntensidadeID" class="form-control" asp-items="ViewBag.IntensidadeID"></select>
            </div>

            <div class="form-group">
                <label asp-for="Comportamento" class="control-label"></label>
                <input asp-for="Comportamento" class="form-control" placeholder="Digite como você reagiu diante dessa situação"/>
                <span asp-validation-for="Comportamento" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EnviarPsicoterapeuta" /> Enviar emoção ao psicólogo ?
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-dark">Voltar ao Histórico de Emoções</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
